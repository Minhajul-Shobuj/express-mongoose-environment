{
  "compilerOptions": {
    // File Structure
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment
    "target": "ES2020",
    "module": "CommonJS",
    "types": ["node"],
    "lib": ["esnext"],

    // Output
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Type Safety
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Module Behavior
    "esModuleInterop": true,
    "verbatimModuleSyntax": false, // Disable strict ESM/CJS separation
    "isolatedModules": true,

    // Build Behavior
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
